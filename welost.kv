WindowManager:
    name: "window_manager"
    id: window_manager

    MainScreen:
    LoginScreen:
    StudentScreen:
    AdminScreen:
    AdminLoginScreen:
    FoundScreen:
    UpdateLostScreen:
    UpdateFoundScreen:
    DashboardScreen:

<MainScreen>:
    name: "main_screen"
    id: main_screen

    FloatLayout:
        Image:
            source: "puppq.png"
            opacity: 0.3
            allow_stretch: True
            keep_ratio: False
            fit_mode: "cover"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(50)
            padding: dp(50)

            Image:
                source: "images/welostlogo.png"
                size_hint: None, None
                size: dp(200), dp(200)
                pos_hint: {"center_x": 0.5, "center_y": 0.5}


            MDLabel:
                text: "Welcome to WeLost!"
                font_style: "Display"
                font_size: "100sp"
                halign: "center"
                valign: "middle"
                pos_hint:{"center_x": 0.5,"center_y":0.20}
                height: dp(18)
                text_color: (255/255, 255/255, 255/255, 1)
                size_hint_y: None

            MDLabel:
                text: "Lost and Found System"
                font_style: "Headline"
                font_size: "25sp"
                halign: "center"
                valign: "middle"
                text_color: 1, 1, 1, 1
                size_hint_y: None
                height: dp(0)

            MDButton:
                style: "elevated"
                height: "50dp"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release:
                    app.root.current = "login_screen"
                    root.manager.transition.direction = "left"
                theme_text_color: 'Custom'
                md_bg_color: (1, 0, 0, 1)

                MDButtonText:
                    text: "Get Started"
                    font_size: 20
                    theme_text_color: "Custom"
                    text_color: (0, 0, 0, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

            Widget:
                size_hint_y: None
                height: 120

<LoginScreen>:
    name: "login_screen"
    id: login_screen

    FloatLayout:
    Image:
        source: "puppq.png"
        opacity: 0.3
        allow_stretch: True
        keep_ratio: False
        fit_mode: "cover"

    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(30)
        padding: dp(40)

        Image:
            source: "puplogo.png"
            size_hint: None, None
            size: dp(150), dp(150)
            pos_hint: {"center_x": 0.5}

        MDLabel:
            id: login_welcome
            text: "Hi, PUPian!"
            font_style: "Headline"
            font_size: 100
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            text_color: (255/255, 255/255, 255/255, 1)

        MDLabel:
            id: login_welcome
            text: "Please click or tap your destination."
            font_size: 100
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
            text_color: (255/255, 255/255, 255/255, 1)

        MDButton:
            style: "elevated"
            height: "40dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release:
                app.root.current = "student_screen"
                root.manager.transition.direction = "left"

            MDButtonText:
                text: "Student"
                font_style: "Title"
                font_size: 15
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDButton:
            style: "elevated"
            height: "40dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release:
                app.root.current = "admin_login_screen"
                root.manager.transition.direction = "left"

            MDButtonText:
                text: "Admin"
                font_style: "Title"
                font_size: 15
                pos_hint: {"center_x": 0.5, "center_y": 0.5}

        Widget:
            size_hint_y: None
            height: 5

        MDLabel:
            id: login_welcome
            text: "By using this service, you understood and agree to the PUP Online Services Terms of Use and Privacy Statement."
            font_size: 100
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15
            text_color: (255/255, 255/255, 255/255, 1)

        Widget:
            size_hint_y: None
            height: 100


<AdminLoginScreen>:
    name: "admin_login_screen"
    id: admin_login_screen

    FloatLayout:
        Image:
            source: "puppq.png"
            opacity: 0.3
            allow_stretch: True
            keep_ratio: False
            fit_mode: "cover"

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(30)
            padding: dp(20)

            Widget:
                size_hint_y: None
                height: dp(30)

            Image:
                source: "puplogo.png"
                size_hint: None, None
                size: dp(200), dp(200)
                pos_hint: {"center_x": 0.5}

            Widget:
                size_hint_y: None
                height: dp(10)

            MDBoxLayout:
                padding: [20, 60]
                size_hint: 0.5, 0.3
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                spacing: 10
                orientation: "vertical"
                md_bg_color: (128/255, 0, 0, 0.2)
                radius: [10, 10, 10, 10]

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: 10
                    padding: [10, 10]
                    size_hint_y: None
                    height: self.minimum_height

                    MDBoxLayout:
                        orientation: "horizontal"

                        MDIconButton:
                            icon: "arrow-left-bold"
                            pos_hint: {"left": 1}
                            theme_icon_color: "Custom"
                            icon_color: (1, 1, 1, 1)
                            on_release:
                                app.root.current = "login_screen"
                                root.manager.transition.direction = "right"

                        MDLabel:
                            id: admin_welcome
                            text: "Admin Login"
                            font_style: "Title"
                            font_size: 50
                            halign: 'center'
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_color: (255/255, 255/255, 255/255, 1)

                        Widget:
                            size_hint_x: None
                            width: 30

                    MDTextField:
                        id: admin_email
                        required: True
                        mode: "filled"
                        MDTextFieldHintText:
                            text: "Admin Email"
                        MDTextFieldTrailingIcon:
                            icon: "email"

                    MDTextField:
                        id: admin_password
                        mode: "filled"
                        required: True
                        password: True
                        MDTextFieldHintText:
                            text: "Password"
                        MDTextFieldTrailingIcon:
                            icon: "lock"

                MDBoxLayout:
                    orientation: "horizontal"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    # Left Spacer
                    Widget:
                        size_hint_x: None
                        width: dp(300)

                    MDButton:
                        size_hint: None, None
                        size: dp(550), dp(40)
                        theme_bg_color: "Custom"
                        md_bg_color: (1, 1, 1, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_release: app.validate_admin_login()
                        text: "Login"
                        icon: "login"

                        MDButtonIcon:
                            icon: "login"
                            theme_icon_color: "Custom"
                            icon_color: (0, 0, 0, 1)
                            pos_hint: {"center_x": .15, "center_y": .5}

                        MDButtonText:
                            theme_text_color: "Custom"
                            text_color: (0, 0, 0, 1)
                            text: "Login"
                            halign: "center"

            Widget:
                size_hint_y: None
                height: dp(80)

<StudentScreen>:
