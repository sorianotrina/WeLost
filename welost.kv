                padding: [20, 60]
                size_hint: 0.70, 0.80
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                spacing: 10
                orientation: "vertical"
                md_bg_color: (128/255, 0, 0, 0.2)
                radius: [10, 10, 10, 10]

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: 10
                    padding: [10, 10]
                    size_hint_y: None
                    height: self.minimum_height

                    MDBoxLayout:
                        orientation: "horizontal"

                        MDIconButton:
                            icon: "arrow-left-bold"
                            pos_hint: {"left": 1}
                            theme_icon_color: "Custom"
                            icon_color: (1, 1, 1, 1)
                            on_release:
                                app.root.current = "login_screen"
                                root.manager.transition.direction = "right"

                        MDLabel:
                            id: student_welcome
                            text: "Lost and Found System"
                            font_style: "Title"
                            font_size: 50
                            halign: 'center'
                            size_hint_y: None
                            height: self.texture_size[1]
                            text_color: (255/255, 255/255, 255/255, 1)

                        Widget:
                            size_hint_x: None
                            width: 30

                    MDTextField:
                        id: student_number
                        required: True
                        mode: "filled"

                        MDTextFieldHintText:
                            text: "Student Number"
                        MDTextFieldTrailingIcon:
                            icon: "id-card"

                    MDTextField:
                        id: name
                        mode: "filled"
                        required: True

                        MDTextFieldHintText:
                            text: "Student Name"
                        MDTextFieldTrailingIcon:
                            icon: "account"

                    MDTextField:
                        id: description
                        mode: "filled"
                        required: True

                        MDTextFieldHintText:
                            text: "Item Description"
                        MDTextFieldTrailingIcon:
                            icon: "text"

                    MDTextField:
                        id: date
                        mode: "filled"
                        required: True
                        on_focus: app.show_date_picker(self.focus)

                        MDTextFieldHintText:
                            text: "Date"
                        MDTextFieldTrailingIcon:
                            icon: "calendar"

                    MDTextField:
                        id: location
                        mode: "filled"
                        required: True

                        MDTextFieldHintText:
                            text: "Location Lost/Found"
                        MDTextFieldTrailingIcon:
                            icon: "map-marker"

                    MDTextField:
                        id: contact
                        hint_text: "Contact Information"
                        mode: "filled"
                        required: True

                        MDTextFieldHintText:
                            text: "Contact Information"
                        MDTextFieldTrailingIcon:
                            icon: "phone"

                    MDTextField:
                        id: status
                        hint_text: "Status"
                        mode: "filled"
                        readonly: True

                        MDTextFieldHintText:
                            text: "Status"
                        MDTextFieldTrailingIcon:
                            icon: "list-status"
                            
                Widget:
                    size_hint_y: None
                    height: dp(20)

                MDBoxLayout:
                    orientation: "horizontal"
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    # Left Spacer
                    Widget:
                        size_hint_x: None
                        width: dp(320)

                    MDButton:
                        size_hint: None, None
                        size: dp(550), dp(40)
                        theme_bg_color: "Custom"
                        md_bg_color: (1, 1, 1, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_release: app.report_lost_item()

                        MDButtonIcon:
                            icon: "application-import"
                            theme_icon_color: "Custom"
                            icon_color: (0, 0, 0, 1)
                            pos_hint: {"center_x": .15, "center_y": .5}

                        MDButtonText:
                            theme_text_color: "Custom"
                            text_color: (0, 0, 0, 1)
                            text: "Report Lost Item"
                            halign: "center"

                    # Spacer between buttons
                    Widget:
                        size_hint_x: None
                        width: dp(10)

                    MDButton:
                        size_hint: None, None
                        size: dp(550), dp(40)
                        theme_bg_color: "Custom"
                        md_bg_color: (1, 1, 1, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.5}
                        on_release: app.report_found_item()

                        MDButtonIcon:
                            icon: "content-save"
                            theme_icon_color: "Custom"
                            icon_color: (0, 0, 0, 1)
                            pos_hint: {"center_x": .15, "center_y": .5}

                        MDButtonText:
                            theme_text_color: "Custom"
                            text_color: (0, 0, 0, 1)
                            text: "Report Found Item"
                            halign: "center"

                    # Right Spacer
                    Widget:
                        size_hint_x: None
                        width: dp(10)


<AdminScreen>:
    name: "admin_screen"
    id: admin_screen

    FloatLayout:
        Image:
            source: "puppq.png"
            opacity: 0.3
            allow_stretch: True
            keep_ratio: False

        MDBoxLayout:
            orientation: "vertical"
            spacing: dp(10)
            padding: dp(20)
            size_hint: 0.90, 0.95
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            md_bg_color: (128/255, 0, 0, 0.2)
            radius: [10, 10, 10, 10]

            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(20)
                padding: dp(10)
                size_hint_y: None
                height: self.minimum_height

                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: dp(20)

                    MDIconButton:
                        icon: "home"
                        theme_icon_color: "Custom"
                        icon_color: (1, 1, 1, 1)
                        on_release:
                            app.root.current = "main_screen"
                            root.manager.transition.direction = "right"

                    MDButton:
                        size_hint: None, None
                        size: dp(200), dp(40)
                        theme_bg_color: "Custom"
                        md_bg_color: (128, 0, 0, .5)
                        on_release:
                            app.root.current = "dashboard_screen"
                            root.manager.transition.direction = "left"


                        MDButtonText:
                            theme_text_color: "Custom"
                            text_color: (1, 1, 1, 1)
                            text: "Go to Dashboard"

                    MDLabel:
                        text: "Manage Lost Items"
                        font_style: "Title"
                        halign: "center"
                        valign: "middle"
                        theme_text_color: "Primary"
                        text_color: (1, 1, 1, 1)
                        padding: [0, dp(20)]

                    Widget:
                        size_hint_x: None
                        width: dp(200)

                    MDIconButton:
                        icon: "logout"
                        theme_icon_color: "Custom"
                        icon_color: (1, 1, 1, 1)
                        on_release:
                            app.log_out()
                            app.root.current = "admin_login_screen"


                MDBoxLayout:
                    orientation: "horizontal"
                    spacing: dp(10)
                    size_hint_y: None
                    height: self.minimum_height

                    MDTextField:
                        id: search_lost
                        mode: "filled"
                        hint_text: "Search Lost Items"
                        size_hint_x: 0.8

                        MDTextFieldHintText:
                            text: "Search Lost Items"

                    MDButton:
                        size_hint_x: 0.2
                        pos_hint: {"center_x": .5, "center_y": .5}
                        theme_text_color: "Custom"
                        text_color: (0, 0, 0, 1)
                        on_release: app.search_value_lost(search_lost.text)

                        MDButtonText:
                            text: "Search"
                            theme_text_color: "Custom"
                            text_color: (0, 0, 0, 1)

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: dp(500)
                    md_bg_color: (128/255, 0, 0, 0.2)

                    MDScrollView:
                        MDList:
                            id: lost_item_list
                            spacing: 10

                MDButton:
                    size_hint: None, None
                    size: dp(200), dp(40)
                    pos_hint: {"right": 1}
                    on_release:
                        app.root.current = "found_screen"
                        root.manager.transition.direction = "right"

                    MDButtonText:
                        theme_text_color: "Custom"
                        text_color: (0, 0, 0, 1)
                        text: "Manage Found Items"


